<Window x:Class="XkcdClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xkcdClock="clr-namespace:XkcdClock"
        Title="xkcd World Clock" 
        Height="705"  
        Width="706" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" 
        WindowStyle="ToolWindow" >
    <Window.DataContext>
        <xkcdClock:ClockRotation />
    </Window.DataContext>
    <Grid>
        <Image x:Name="Outer" Source="Resources/Outer.png" Height="705" Width="706" />
        <Image x:Name="Inner" Source="Resources/Inner.png" Height="705" Width="706" RenderTransformOrigin="0.5,0.5" >
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="{Binding Path=InnerRotation}"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
